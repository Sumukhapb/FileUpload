<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Dashboard</title>
    <!-- Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <style>
      body {
        background-color: #f4f6f9;
      }

      .glass-card {
        background: rgba(255, 255, 255, 0.35);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      .gradient-btn {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        color: white;
        border: none;
      }

      .gradient-btn:hover {
        background: linear-gradient(135deg, #0056b3, #009fcf);
        color: white;
      }

      .btn-animate {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
      }

      .btn-animate:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(0, 123, 255, 0.4);
      }
    </style>
  </head>

  <body>
    <% layout('layout') %>

    <div class="container text-center mt-5">
      <div class="card glass-card p-4 mx-auto" style="max-width: 400px">
        <h2 class="mb-3">Welcome, <%= user.name %>!</h2>
        <img
          src="<%= user.profilPic %>"
          alt="Profile Picture"
          class="rounded-circle border shadow-sm mb-3"
          width="80"
          height="80"
        />
        <p class="text-muted mb-4">Email: <%= user.email %></p>

        <!-- Modern Animated Button -->
        <a
          href="/files/access-shared"
          class="btn btn-lg w-100 gradient-btn btn-animate"
        >
          <i class="fas fa-folder-open me-2"></i> Access Shared Files
        </a>
      </div>
    </div>
  </body>
</html>
